function [ conto ] = centered_cont( cont )

    %Find dim and center
    minx = cont(1,1);
    miny = cont(2,1);
    maxx = minx;
    maxy = miny;
    mx = 0;
    my = 0;
    for i = 1 : size(cont,2)
        x = cont(1,i);
        y = cont(2,i);
        if x < minx
            minx = x;
        end
        if x > maxx
            maxx = x;
        end
        if y < miny
            miny = y;
        end
        if y > maxy
            maxy = y;
        end
        mx = mx + x;
        my = my + y;
    end
    mx = round(mx / size(cont,2));
    my = round(my / size(cont,2));
    
    w = maxx - minx;
    h = maxy - miny;
    if mod(w,2) == 0
        w = w + 1;
    end
    if mod(h,2) == 0
        h = h + 1;
    end
    
    cx = (w-1) / 2;
    cy = (h-1) / 2;
    mask = zeros(w,h);
    for i = 1 : size(cont,2)
        [x,y] = transpose(cont(:,i));
        [x y] = [x y];% - [mx,my] + [cx,cy];
        mask(y,x) = 1;
    end
end

